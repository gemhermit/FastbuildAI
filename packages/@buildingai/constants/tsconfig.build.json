{
    "extends": ["./tsconfig.json", "@buildingai/typescript-config/build.json"],
    "compilerOptions": {
        "composite": true,
        "rootDir": "src",
        "outDir": "dist",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "tsBuildInfoFile": "dist/build.tsbuildinfo"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/__tests__/**"]
}
